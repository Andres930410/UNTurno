<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.slabcode.unturno.AboutFragment"
    tools:showIn="@layout/activity_about"
    android:background="@color/greenLight">

    <TextView
        android:id="@+id/title"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="50sp"
        android:textColor="@color/colorAccent"
        android:text="UN Turno"
        android:layout_marginTop="32dp"
        />


    <ScrollView
        android:id="@+id/about_scroll"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="32dp"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp"
        android:layout_marginBottom="32dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@drawable/shape">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textColor="@color/colorAccent"
            android:textSize="20sp"
            android:padding="8dp"
            android:text="Aplicación para solucionar el problema de filas en la Universidad Nacional de Colombia.\n El objetivo principal es la acción de de turnos para disminuir la cantidad de personas en las filas, este aplicacion nace como idea de proyecto en la materia de TPI y fue desarrollada por:\n Andres Rene Gutierrez Tiuso\n Daniel Felipe Parra Castillo\n Diego Andres Vasquez Avila\n Edilberto Cañon Pasqel\nJulian Felipe Torres Campos\nAlexa Caterin Prado Naranjo"/>


    </ScrollView>


</android.support.constraint.ConstraintLayout>
